<% include header %>

<h1 align="center">Selfies With Strangers</h1>
<form method="post" action="/login" class="form-horizontal">
  <div class="form-group">
    <fieldset>
    	<label for="email" class="col-md-2 control-label">Email</label>
 	<div class="col-sm-10">
    	  <input type="email" name="email" class="form-control"/>
	</div>
    </fieldset>
  </div>

  <div class="form-group">
    <fieldset>
      <label for="password" class="col-md-2 control-label">Password</label>
      <div class="col-sm-10">
        <input type="password" name="password" class="form-control"/>
      </div>
    </fieldset>
  </div>

  <div class="row"> 
      <input class="btn btn-default col-md-4 col-md-offset-1" type="submit" value="Login" />
      <a href="/users/new" class="btn btn-primary col-md-4 col-md-offset-2">Sign up</a>
  </div>
</form>
	
<% include footer %>
