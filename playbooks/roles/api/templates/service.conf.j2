description "api"

#start on (local-filesystems and net-device-up IFACE=eth0)
#stop on shutdown

start on runlevel [2345]
stop on runlevel [!2345]

console log

respawn
respawn limit unlimited

script
    echo $$ > /var/run/api.pid
    exec sudo -u api ENV={{ deploy_env }} /opt/api/bin/api
end script

pre-stop script
    rm /var/run/api.pid
end script